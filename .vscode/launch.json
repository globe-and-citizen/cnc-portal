  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vue.js: Brave Browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/app/src",
      "runtimeExecutable": "/snap/bin/brave",
