generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address      String        @id @unique
  name         String?
  teams        Team[]
}
model Team {
  id           Int           @id @default(autoincrement())
  members    Member[]
  owner        User          @relation(fields: [ownerId], references: [address])
  ownerId      String
  description  String?
  name         String        @unique
}
model Member{
  id            Int           @id @default(autoincrement())
  name          String         
  walletAddress String
  team       Team? @relation(fields: [teamId], references: [id])  // Add the opposite relation field here
  teamId     Int?    // Nullable because an member may not belong to a team initially

}
