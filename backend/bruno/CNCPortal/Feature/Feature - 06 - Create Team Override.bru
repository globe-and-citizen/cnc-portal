meta {
  name: Feature - 06 - Create Team Override
  type: http
  seq: 6
}

post {
  url: {{host}}/admin/features/{{testFeatureName}}/teams/{{teamId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "status": "enabled"
  }
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return override object directly", function() {
    expect(res.body).to.be.an('object');
    const expectedTeamId = parseInt(bru.getVar('teamId') || bru.getEnvVar('teamId'));
    expect(res.body.teamId).to.equal(expectedTeamId);
    expect(res.body.status).to.equal('enabled');
  });

  test("log created override", function() {
    console.log("Created override:", JSON.stringify(res.body, null, 2));
  });
}
