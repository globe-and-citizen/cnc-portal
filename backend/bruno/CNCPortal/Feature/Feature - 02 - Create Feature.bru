meta {
  name: Feature - 02 - Create Feature
  type: http
  seq: 2
}

post {
  url: {{host}}/admin/features
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "functionName": "{{testFeatureName}}",
    "status": "disabled"
  }
}

script:post-response {
  // Store the feature name for subsequent tests
  if (res.getStatus() === 201 && res.body) {
    bru.setVar('testFeatureName', res.body.functionName);
    console.log('Stored testFeatureName:', res.body.functionName);
  }
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return created feature", function() {
    const expectedName = bru.getVar('testFeatureName') || bru.getEnvVar('testFeatureName');
    expect(res.body).to.be.an('object');
    expect(res.body.functionName).to.equal(expectedName);
    expect(res.body.status).to.equal('disabled');
  });

  test("log created feature", function() {
    console.log("Created feature:", JSON.stringify(res.body, null, 2));
  });
}
