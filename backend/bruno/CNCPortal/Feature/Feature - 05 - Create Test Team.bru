meta {
  name: Feature - 05 - Create Test Team
  type: http
  seq: 5
}

post {
  url: {{host}}/teams
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "name": "Feature Test Team",
    "description": "Team created for feature testing purposes",
    "officerAddress": "0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266",
    "members": [
      {
        "name": "Test Member",
        "address": "0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266"
      }
    ]
  }
}

tests {
  test("should return 201 status for successful team creation", function() {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("should return created team object", function() {
    expect(res.body).to.be.an('object');
    expect(res.body).to.have.property('id');
    expect(res.body).to.have.property('name');
  });
  
  test("store team ID for feature override tests", function() {
    bru.setVar("testTeamId", res.body.id);
    console.log("Created test team with ID:", res.body.id);
  });
}
