{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "npx nodemon src/index.ts",
    "test": "vitest run -c vitest.unit.config.ts",
    "test:watch": "vitest -c vitest.unit.config.ts",
    "test:e2e": "vitest run -c vitest.e2e.config.ts",
    "test:unit:coverage": "npx vitest run --coverage -c ./vitest.config.ts",
    "test:e2e:watch": "vitest -c vitest.e2e.config.ts",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:bruno:setup": "ts-node scripts/updateBrunoAuth.ts",
    "test:bruno": "npm run test:bruno:setup && cd \"bruno/CNC Portal\" && npx bru run -r --env \"CNC URI\"",
    "test:bruno:auth": "npm run test:bruno:setup && cd \"bruno/CNC Portal\" && npx bru run Auth -r --env \"CNC URI\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc && npm run sentry:sourcemaps",
    "prod": "node  dist/index.js",
    "copy:docs": "npx shx cp src/utils/backend_specs.html dist/utils/backend_specs.html",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org global-citizen-g6 --project cnc-portal-api ./dist && sentry-cli sourcemaps upload --org global-citizen-g6 --project cnc-portal-api ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
