    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.47",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@usebruno/cli": "^2.12.0",
    "@vitest/coverage-istanbul": "^4.0.15",
    "eslint": "^9.39.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "prisma": "^6.15.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.48.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@prisma/client": "^6.15.0",
