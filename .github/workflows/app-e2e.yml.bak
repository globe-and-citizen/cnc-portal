name: Frontend E2E Synpress Playwright
permissions:
  contents: read

on:
  pull_request:
    branches: ["**"]
    paths:
      - "app/**"
  workflow_dispatch:

jobs:
  app-e2e-test:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ›« Checkout
        uses: actions/checkout@v4

      - name: ğŸ— Set up NodeJS 20.10.0
        uses: actions/setup-node@v4
        with:
          node-version: 20.10.0
          cache: "npm"
          cache-dependency-path: ./app/package-lock.json

      - name: Install dependencies
        run: npm install
        working-directory: ./app

      - name: ğŸ­ Install Playwright dependencies
        run: npx playwright install-deps
        working-directory: ./app

      - name: ğŸŒ Install browsers for Playwright
        run: npx playwright install chromium
        working-directory: ./app

      - name: </> Install linux dependencies
        run: |
          sudo apt-get install --no-install-recommends -y \
          xvfb

      - name: â›“ï¸ Install Foundry
        uses: foundry-rs/foundry-toolchain@v1
        with:
          version: stable

      - name: ğŸŒ Run App for cache
        run: |
          VITE_APP_NETWORK_ALIAS=hardhat npm run dev &
          echo $! > pid.txt
        working-directory: ./app

      - name: â›“ï¸ Run Local Node (Anvil)
        run: anvil --load-state ./local-node-state.json &
        working-directory: ./app

      - name: ğŸ’¾ Build Cache
        run: xvfb-run npm run test:build:cache
        working-directory: ./app

      - name: ğŸ’» Run E2E
        run: |
          kill $(cat pid.txt)
          xvfb-run npm run test:headless
        working-directory: ./app

      - name: âœ… Upload coverage to Codecov
        uses: codecov/codecov-action@v4.0.1
        with:
          token: ${{ secrets.CODECOV_TOKEN }}
          flags: app-E2E-tests